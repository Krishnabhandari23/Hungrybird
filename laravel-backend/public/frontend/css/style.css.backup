    padding: 0.75rem;
  }

  .workflow-info h3 {
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    margin-top: 0.75rem;
  }

  .workflow-info h3:first-child {
    margin-top: 0;
  }

  .workflow-info ul {
    margin-bottom: 0;
  }

  .workflow-info li {
    font-size: 0.8rem;
    line-height: 1.55;
    margin-bottom: 0.4rem;
  }

