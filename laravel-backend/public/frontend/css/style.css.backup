    padding: 0.75rem;
  }

  .workflow-view-section-title h4 {
    font-size: 0.95rem;
  }

  .workflow-view-item {
    padding: 0.65rem;
  }

  .action-buttons {
    gap: 0.35rem;
  }

  .action-buttons .btn {
    font-size: 0.75rem;
    padding: 0.5rem 0.25rem;
    min-width: 100px;
