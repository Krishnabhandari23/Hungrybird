    padding: 0.65rem 0;
    gap: 0.85rem;
    min-height: 44px;
  }

  table td::before {
    font-size: 0.85rem;
    flex: 0 0 30%;
  }

  table td > * {
    font-size: 0.85rem;
    line-height: 1.55;
  }

  table td[data-label="Description"] {
    align-items: flex-start;
  }

  table td[data-label="Description"] span {
    text-align: left;
  }


